@model List<BankingSystem.PL.ViewModels.Manager.TellerDetailsViewModel>

@{
    ViewData["Title"] = "Teller Details";
}
<style>
    :root {
        --primary-dark: rgb(63, 114, 175); /* new primary dark */
        --primary-medium: rgb(157, 178, 191); /* new primary medium */
        --primary-light: rgb(219, 226, 239); /* new primary light */
        --secondary-dark: rgb(63, 114, 175); /* mapped to primary-dark because no exact secondary */
        --secondary-light: rgb(219, 226, 239); /* mapped to primary-light */
        --neutral-1: rgb(157, 178, 191); /* mapped to text-light */
        --accent-1: rgb(63, 114, 175); /* mapped to primary-dark */
        --accent-2: rgb(221, 230, 237); /* primary-lightest */
        --accent-3: rgb(238, 244, 255); /* soft background you used */
        --white: #ffffff; /* stays same */
    }

    .tellers-container {
        background: var(--accent-3);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .tellers-header {
        color: var(--primary-dark);
        border-bottom: 2px solid var(--accent-1);
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .add-teller-btn {
        background-color: var(--primary-medium);
        border: none;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
        margin-bottom: 2rem;
    }

        .add-teller-btn:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .tellers-table {
        background: var(--white);
        border-radius: 10px;
        overflow: hidden;
    }

        .tellers-table thead {
            background: linear-gradient(90deg, var(--primary-dark), var(--primary-medium));
            color: var(--accent-3);
        }

        .tellers-table th {
            font-weight: 500;
            padding: 1rem;
        }

        .tellers-table td {
            vertical-align: middle;
            padding: 0.75rem 1rem;
        }

        .tellers-table tr:hover {
            background-color: var(--accent-2);
        }

    .action-btn {
        padding: 0.5rem 1rem;
        margin: 0.25rem;
        transition: all 0.3s ease;
        border: none;
    }

    .btn-details {
        background-color: var(--secondary-dark);
    }

    .btn-update {
        background-color: var(--primary-light);
    }

    .btn-delete {
        background-color: var(--accent-1);
    }

    .action-btn:hover {
        background-color: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        opacity: 0.9;
    }
</style>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xxl-10 col-12">
            <div class="tellers-container">
                <h2 class="tellers-header">
                    <i class="fas fa-user-tie me-2"></i>Teller Details
                </h2>

                <a class="btn btn-primary add-teller-btn text-white" asp-action="CreateTeller">
                    <i class="fas fa-plus-circle me-2"></i>Add New Teller
                </a>

                <div class="table-responsive">
                    <table class="table tellers-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Branch</th>
                                <th>Email</th>
                                <th>SSN</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teller in Model)
                            {
                                <tr>
                                    <td>@teller.FirstName @teller.LastName</td>
                                    <td>@teller.BranchName</td>
                                    <td>@teller.Email</td>
                                    <td>@teller.SSN</td>
                                    <td>
                                        <a class="btn btn-details text-white action-btn"
                                           asp-action="GetTellerDetails"
                                           asp-route-id="@teller.Id">
                                            <i class="fas fa-info-circle me-1"></i>Details
                                        </a>
                                        <a class="btn btn-primary btn-update text-white action-btn"
                                           asp-action="EditTeller"
                                           asp-route-id="@teller.Id">
                                            <i class="fas fa-edit me-1"></i>Update
                                        </a>
                                        <a class="btn btn-delete text-white action-btn"
                                           asp-action="DeleteTeller"
                                           asp-route-id="@teller.Id">
                                            <i class="fas fa-trash-alt me-1"></i>Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>