<style>
    :root {
        --primary-dark: #1a1a1a !important;
        --secondary-dark: #2d2d2d !important;
        --sidebar-dark: #252525 !important;
        --accent-color: #6c757d !important;
        --accent-hover: #5a6268 !important;
        --text-primary: #f8f9fa !important;
        --text-secondary: #adb5bd !important;
        --card-bg: #2d2d2d !important;
        --table-bg: #2d2d2d !important;
        --table-border: #3d3d3d !important;
        --success-color: #28a745 !important;
        --warning-color: #ffc107 !important;
        --danger-color: #dc3545 !important;
        --info-color: #17a2b8 !important;
        --accent-1: #6c757d !important;
        --accent-2: #efd7cf !important;
    }

    body {
        background-color: var(--primary-dark) !important;
        color: var(--text-primary) !important;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow-x: hidden;
    }

    .sidebar {
        background-color: var(--sidebar-dark);
        height: 100vh;
        position: fixed;
        padding-top: 20px;
        width: 250px;
        transition: all 0.3s ease;
        z-index: 1000;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
        left: 0;
        display: flex;
        flex-direction: column;
        transition: width 0.3s ease;
    }

    .sidebar-collapsed {
        width: 70px;
        overflow: hidden;
    }

        .sidebar-collapsed .logo-text,
        .sidebar-collapsed .nav-link span {
            display: none;
        }

        .sidebar-collapsed .nav-link {
            text-align: center;
            padding: 10px 5px;
        }

            .sidebar-collapsed .nav-link i {
                margin-right: 0;
                font-size: 1.2rem;
            }

        .sidebar-collapsed .logo {
            justify-content: center;
        }

    .main-content {
        margin-left: 250px;
        padding: 20px;
        transition: all 0.3s ease;
        min-height: 100vh;
    }

    .main-content-collapsed {
        margin-left: 70px;
    }

    .sidebar .nav-link {
        color: var(--text-secondary);
        margin-bottom: 5px;
        border-radius: 5px;
        padding: 10px 15px;
        transition: all 0.2s;
        white-space: nowrap;
        display: flex;
        align-items: center;
    }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: rgba(108, 117, 125, 0.2);
            color: var(--text-primary);
            transform: translateX(3px);
        }

        .sidebar .nav-link i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
            transition: all 0.3s ease;
        }

    .card {
        background-color: var(--card-bg);
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        }

    .card-header {
        background-color: rgba(45, 45, 45, 0.8);
        border-bottom: 1px solid var(--table-border);
        font-weight: 600;
        border-radius: 10px 10px 0 0 !important;
    }

    .table {
        color: var(--text-primary);
        background-color: var(--table-bg);
    }

        .table th {
            border-bottom: 1px solid var(--table-border);
            font-weight: 600;
        }

        .table td {
            border-top: 1px solid var(--table-border);
            vertical-align: middle;
        }

    .btn-primary {
        background-color: var(--accent-color);
        border: none;
        color: var(--text-primary);
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: var(--accent-hover);
            color: var(--text-primary);
            transform: translateY(-2px);
        }

    .btn-outline-primary {
        border-color: var(--accent-color);
        color: var(--accent-color);
    }

        .btn-outline-primary:hover {
            background-color: var(--accent-color);
            color: var(--text-primary);
        }

    .stat-card {
        border-left: 4px solid var(--accent-color);
        height: 100%;
    }

        .stat-card .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 5px;
        }

        .stat-card .stat-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-card .trend-indicator {
            font-size: 0.8rem;
            margin-top: 8px;
        }

    .form-control,
    .form-select {
        background-color: rgba(45, 45, 45, 0.5);
        border: 1px solid var(--table-border);
        color: var(--text-primary);
        border-radius: 6px;
    }

        .form-control:focus,
        .form-select:focus {
            background-color: rgba(45, 45, 45, 0.7);
            border-color: var(--accent-color);
            color: var(--text-primary);
            box-shadow: 0 0 0 0.25rem rgba(108, 117, 125, 0.25);
        }

    .logo {
        color: var(--text-primary);
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 30px;
        padding: 0 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo-text {
        color: var(--text-primary);
        transition: all 0.3s ease;
    }

    .sidebar-toggle {
        background: none;
        border: none;
        color: var(--text-secondary);
        font-size: 1.2rem;
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 5px;
        border-radius: 50%;
    }

        .sidebar-toggle:hover {
            color: var(--text-primary);
            background-color: rgba(108, 117, 125, 0.2);
        }

    .badge {
        font-weight: 500;
        padding: 5px 8px;
    }

    .notification-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background-color: var(--danger-color);
        color: white;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
    }

    @@media (max-width: 768px) {
        .sidebar {
            width: 250px;
            left: -250px;
        }

            .sidebar.active {
                left: 0;
            }

        .main-content {
            margin-left: 0;
        }

        .main-content-collapsed {
            margin-left: 0;
        }

        .stat-card .stat-value {
            font-size: 1.5rem;
        }
    }

    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: var(--secondary-dark);
    }

    ::-webkit-scrollbar-thumb {
        background: var(--accent-color);
        border-radius: 4px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--accent-hover);
        }

    .text-success {
        color: var(--success-color) !important;
    }

    .text-warning {
        color: var(--warning-color) !important;
    }

    .text-danger {
        color: var(--danger-color) !important;
    }

    .text-info {
        color: var(--info-color) !important;
    }

    .dashboard-header {
        margin-bottom: 30px;
    }

        .dashboard-header h4 {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .dashboard-header p {
            color: var(--text-secondary);
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .nav-list {
        flex-grow: 1;
        overflow-y: auto;
        padding-bottom: 20px;
    }

    .logout-btn {
        margin-top: auto;
        padding: 0 5% 5% 0;
        border-top: 1px solid var(--table-border);
    }

        .logout-btn .nav-link {
            padding: 10px;
        }


    .bnk-logo {
        margin-left: 5px;
        color: var(--accent-color);
    }

    .trend-up {
        color: var(--success-color);
    }

    .trend-down {
        color: var(--warning-color);
    }



    .sidebar {
        transition: width 0.3s ease;
        width: 250px;
    }

    .sidebar.sidebar-collapsed {
        width: 70px;
    }

    .main-content {
        transition: margin-left 0.3s ease;
        margin-left: 250px;
    }

        .main-content.main-content-collapsed {
            margin-left: 70px;
        }

    /* Optional: Animate logo text fade out on collapse */
    .sidebar .logo-text {
        transition: opacity 1s ease;
        opacity: 1;
    }

    .sidebar.sidebar-collapsed .logo-text {
        opacity: 0;
    }

    /* Optional: Smooth collapse for nav text */
    .sidebar .nav-link span {
        transition: opacity 1s ease;
        opacity: 1;
    }

    .sidebar.sidebar-collapsed .nav-link span {
        opacity: 0;
    }



    #main-content {
        opacity: 1;
        transition: opacity 0.2s ease-in-out;
    }

    #main-content.fade-out {
        opacity: 0;
    }
</style>


